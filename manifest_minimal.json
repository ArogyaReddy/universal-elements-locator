{
  "manifest_version": 3,
  "name": "Universal Element Locator (Minimal)",
  "version": "1.0.0",
  "description": "Simple element scanner",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background_minimal.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Universal Element Locator"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
