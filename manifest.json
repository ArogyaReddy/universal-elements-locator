{
  "manifest_version": 3,
  "name": "Universal Element Locator",
  "version": "1.0.0",
  "description": "Scan & Generate Locators for Any Page",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background_simple.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Universal Element Locator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
